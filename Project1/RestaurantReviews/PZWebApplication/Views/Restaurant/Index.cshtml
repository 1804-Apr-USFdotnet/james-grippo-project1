@using PZModels
@model IEnumerable<PZModels.Restaurant>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <table style="border:2px solid; border-collapse:collapse">
            <thead>
                <tr>
                    <th>Name </th>
                    <th>Address </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rest in Model)
            {
                <tr style="border:2px solid black">
                    <td>@rest.Address()</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = rest.RestaurantId })</td>
                    <td>@Html.ActionLink("Delete", "Delete", new { id = rest.RestaurantId })</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = rest.RestaurantId })</td>
                </tr>
        }
            </tbody>
        </table>
        @Html.ActionLink("Create", "Create", null, htmlAttributes: new { @class = "btn btn-secondary btn-block p-1 m-1" })
    </div>
</body>
</html>